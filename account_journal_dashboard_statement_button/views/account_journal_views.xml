<odoo>
    <record id="account_journal_dashboard_kanban_view" model="ir.ui.view">
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view" />
        <field name="arch" type="xml">
            <xpath
                expr='//a[@name="action_configure_bank_journal"]/..'
                position='before'
            >
                <t t-if="journal_type == 'bank'">
                    <button
                        name="open_action_with_context"
                        type="object"
                        class="btn btn-primary d-block"
                        groups="account.group_account_user"
                        context="{'action_name':  'action_bank_statement_tree', 'search_default_journal': True }"
                    >
                        <span>Statements</span>
                    </button>
                </t>
                <t t-if="journal_type == 'cash'">
                    <button
                        name="open_action_with_context"
                        type="object"
                        class="btn btn-primary d-block"
                        groups="account.group_account_user"
                        context="{'action_name':  'action_view_bank_statement_tree', 'search_default_journal': True }"
                    >
                        <span>Statements</span>
                    </button>
                </t>

            </xpath>
        </field>
    </record>

</odoo>
